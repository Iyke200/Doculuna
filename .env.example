# DocuLuna Bot Configuration

# Telegram Bot Token (Required - Get from @BotFather on Telegram)
BOT_TOKEN=your_telegram_bot_token_here

# Environment Mode (development or production)
ENVIRONMENT=development

# Admin User IDs (comma-separated Telegram user IDs)
ADMIN_USER_IDS=123456789

# Database Configuration
DB_PATH=database/doculuna.db

# Premium Plans Pricing (in Naira)
WEEKLY_PREMIUM_PRICE=3500
MONTHLY_PREMIUM_PRICE=1000

# Legacy Pricing (deprecated)
DAILY_PREMIUM_PRICE=3500
THREE_MONTH_PREMIUM_PRICE=9000
LIFETIME_PREMIUM_PRICE=25000

# Payment Configuration
PAYMENT_ACCOUNT=your_account_number
PAYMENT_BANK=your_bank_name
PAYMENT_NAME=your_account_name

# Paystack Payment Integration (Optional)
PAYSTACK_SECRET_KEY=your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=your_paystack_public_key

# Webhook Configuration (for Production)
WEBHOOK_URL=
PORT=5000

# Usage Limits
FREE_DAILY_LIMIT=3
PREMIUM_DAILY_LIMIT=1000

# File Size Limits (in bytes)
MAX_FILE_SIZE_FREE=20971520
MAX_FILE_SIZE_PREMIUM=52428800
